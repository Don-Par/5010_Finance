<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="PersonalFinanceTracker.Views.TransactionsView">
    <Grid>
        <StackPanel>
            <TextBlock Text="Transactions" FontSize="20" Margin="10"/>
            
            <DataGrid x:Name="TransactionGrid"
                      AutoGenerateColumns="True"
                      Height="300"
                      Margin="10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Add" Click="AddTransaction_Click" Margin="5"/>
                <Button Content="Edit" Click="EditTransaction_Click" Margin="5"/>
                <Button Content="Delete" Click="DeleteTransaction_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
